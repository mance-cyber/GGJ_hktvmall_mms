{
  "$schema": "https://schema.zeabur.app/template.json",
  "name": "gogojap-frontend",
  "description": "GoGoJap HKTVmall AI System - Frontend",
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "ports": [3000],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL (must include /api/v1 suffix)",
      "required": true,
      "default": "https://ggj-back.zeabur.app/api/v1"
    },
    "NEXT_PUBLIC_ENV": {
      "description": "Environment",
      "default": "production"
    }
  },
  "healthcheck": {
    "path": "/",
    "port": 3000
  }
}
